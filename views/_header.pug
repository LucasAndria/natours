header.header
   nav.nav.nav--tours
      a.nav__el(href='/') All tours
   .header__logo
      img(src=`${process.env.STATIC_FILE_SERVER}img/logo-white.png` alt='Tours Mada logo')
   nav.nav.nav--user
      if user 
         a.nav__el.nav__el--logout Log out
         a.nav__el(href='/me')
            img.nav__user-img(src=`${process.env.STATIC_FILE_SERVER}img/users/${user.photo}` alt=`Photo of ${user.name}`)
            span= user.name.split(' ')[0]
      else
         a.nav__el(href='/login') Login
         a.nav__el.nav__el--cta(href='/signup') Sign up
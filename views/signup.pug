extends base

block content
   main.main
      .signup-form
         h2.heading-secondary.ma-bt-lg SIGN UP
         form.form
            .form__group
               label.form__label(for='name') Name
               input#name.form__input.signup(type='text', placeholder='John doe', required)
            .form__group
               label.form__label(for='email') Email address
               input#email.form__input.signup(type='email', placeholder='you@example.com', required)
            .form__group.ma-bt-md
               label.form__label(for='password') Password
               input#password.form__input.signup(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.ma-bt-md
               label.form__label(for='passwordConfirm') Confirm password
               input#passwordConfirm.form__input.signup(type='password', placeholder='••••••••', required)
            .form__group
               button.btn.btn--green Create Acount
